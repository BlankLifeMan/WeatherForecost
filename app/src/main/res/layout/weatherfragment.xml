<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/biz_plugin_weather_shenzhen_bg">
<TextView
    android:id="@+id/tv_tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="南京"
    android:textColor="#fff"
    android:textSize="40sp"
    android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/tv_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:41发布"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_below="@id/tv_tv1"
        android:layout_alignLeft="@+id/tv_tv1" />
    <TextView
        android:id="@+id/tv_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湿度:71%"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_alignLeft="@+id/tv_tv4"
        android:layout_below="@id/tv_tv4"/>
    <RelativeLayout
        android:id="@+id/rl_rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_plugin_weather_0_50"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/tv_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM2.5"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/iv_iv1"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_below="@+id/tv_tv2"
            android:layout_toLeftOf="@+id/iv_iv1"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_below="@+id/rl_rl1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"/>

    <ImageView
        android:id="@+id/iv_iv2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_rl1"
        android:layout_marginTop="60dp"
        android:src="@mipmap/biz_plugin_weather_qing" />
    <TextView
        android:id="@+id/tv_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6日星期四"
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/iv_iv2"
        android:layout_alignTop="@+id/iv_iv2"/>
    <TextView
        android:id="@+id/tv_tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22℃~29℃"
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/iv_iv2"
        android:layout_below="@id/tv_tv6"/>
    <TextView
        android:id="@+id/tv_tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阴"
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/iv_iv2"
        android:layout_below="@id/tv_tv7"/>
    <TextView
        android:id="@+id/tv_tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风力2级"
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/iv_iv2"
        android:layout_below="@id/tv_tv8"/>

</RelativeLayout>