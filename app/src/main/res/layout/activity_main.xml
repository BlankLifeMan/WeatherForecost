<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#f10707">
        <ImageView
            android:id="@+id/iv_iv1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/title_city"/>
        <TextView
            android:id="@+id/tv_tv1"
            android:layout_toRightOf="@id/iv_iv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="天气预报"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_iv2"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/title_update"/>
        <ImageView
            android:id="@+id/iv_iv3"
            android:layout_toLeftOf="@id/iv_iv2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/title_share"/>
        <ImageView
            android:id="@+id/iv_iv4"
            android:layout_toLeftOf="@id/iv_iv3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/base_action_bar_action_city"/>
    </RelativeLayout>
<FrameLayout
    android:id="@+id/fl_fl1"
    android:layout_below="@+id/rl_rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>

</RelativeLayout>
